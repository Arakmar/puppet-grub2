# If you change this file, run 'update-grub' afterwards to update
# /boot/grub/grub.cfg.

GRUB_DEFAULT=<%= grub_default %>
GRUB_TIMEOUT=<%= grub_timeout %>
GRUB_DISTRIBUTOR=<%= grub_distributor %>
GRUB_CMDLINE_LINUX_DEFAULT="<%= grub_cmdline_linux_default %>"
GRUB_CMDLINE_LINUX="<%= grub_cmdline_linux %>"

# Uncomment to enable BadRAM filtering, modify to suit your needs
# This works with Linux (no patch required) and with any kernel that obtains
# the memory map information from GRUB (GNU Mach, kernel of FreeBSD ...)
<% if grub_badram != false %>GRUB_BADRAM="<%= grub_badram %>"
<% else %>#GRUB_BADRAM="0x01234567,0xfefefefe,0x89abcdef,0xefefefef"
<% end %>

# Uncomment to disable graphical terminal (grub-pc only)
<% if grub_terminal != false %>GRUB_TERMINAL="<%= grub_terminal %>"
<% else %>#GRUB_TERMINAL=console
<% end %>

<% if grub_serial_command != false %># The serial command used
GRUB_SERIAL_COMMAND="<%= grub_serial_command %>"
<% end %>

# The resolution used on graphical terminal
# note that you can use only modes which your graphic card supports via VBE
# you can see them in real GRUB with the command `vbeinfo'
<% if grub_gfxmode != false %>GRUB_GFXMODE="<%= grub_gfxmode %>"
<% else %>#GRUB_GFXMODE=640x480
<% end %>

# Uncomment if you don't want GRUB to pass "root=UUID=xxx" parameter to Linux
GRUB_DISABLE_LINUX_UUID=<%= grub_disable_linux_uuid %>

# Uncomment to disable generation of recovery mode menu entries
GRUB_DISABLE_LINUX_RECOVERY=<%= grub_disable_linux_recovery %>

# Uncomment to get a beep at grub start
<% if grub_init_tune != false %>GRUB_INIT_TUNE="<%= grub_init_tune %>"
<% else %>#GRUB_INIT_TUNE="480 440 1"
<% end %>
